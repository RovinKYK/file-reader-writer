FROM --platform=$BUILDPLATFORM golang:1.22.8-alpine AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
ARG TARGETOS
ARG TARGETARCH
ENV CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH
RUN go build -trimpath -ldflags="-s -w" -o /out/app -buildvcs=false .

FROM alpine:3.20
RUN addgroup -g 10014 choreo \
&& adduser -D -H -u 10014 -G choreo choreouser \
&& mkdir -p /writedir \
&& chmod 777 /writedir
COPY --from=build /out/app /usr/local/bin/app
USER 10014
EXPOSE 8081
ENTRYPOINT ["/usr/local/bin/app"]